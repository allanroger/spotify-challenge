{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": ["src", "vite.config.ts", "jest.setup.ts", "**/*.test.ts", "**/*.test.tsx"]
}
